- var linksItem = ['facebook-official', 'twitter', 'google-plus', 'linkedin']
- var linksUrl = ['facebook.com', 'twitter.com', 'google.com', 'linkedin.com']
footer.footer
    .footerTop
        .container
            .footerTitle Get in touch
            .footerLinks
                each item, key in linksItem
                    a.footerSocial(href = "http://" + linksUrl[key] target="_blank")
                        i(class="fa fa-" + item aria-hidden="true")
                            span.visuallyHidden=linksItem
            .footerText Subscribe to our newsletter to stay update with what is new
            .footerField: input.footerInput(type="email" placeholder="Email Address")
            button(type="submit").button Subscribe
    .footerBottom
        .footerCopy SomeSite.com Â© 2020 All Rights Reserved