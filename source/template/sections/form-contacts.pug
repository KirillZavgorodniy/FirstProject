section.formSection
    .container
        .title
            h2.titleHeader Get Your Free Facebook Analysits Now
            .titleText Enter your details below

            .btnDown: a.arrowDown: i.fa.fa-angle-down

            .formContainer.isHidden
                form(method="post" action="#").form
                    button(type="button").formCloseButton
                        span.formCloseButtonText x

                    .formText.
                        Sit down with our experts to receive a free customized marketing plan for your business
                         + Learn How To Use Google and Facebook to get 5000% ROI or more
                    .formFields
                        input.formInput(type="text" placeholder="Your Name" data-valid="required")
                        input.formInput(type="text" placeholder="Contact E-mail" data-valid="required" data-email)
                        input.formInput(type="text" placeholder="Contact Number" data-valid="required" data-number)

                    button(type="submit").button.buttonHeader.buttonTextUppercxase Submit now
